{% extends '.layout.njk' %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "./components/macro.njk" import crumbToken, multiSideBar, conditionalButtons %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}

{% block pageTitle %}   
  {% if errorList %}
    Error: 
  {% endif %} {{title}} - {{siteTitle}}
{% endblock %}

{% block beforeContent %}
  {% if backUrl %}
    {{ govukBackLink({
      text: "Back",
      href: backUrl
    }) }}
  {% endif %}

  {% if errorList %}
    {{ govukErrorSummary ({
        "titleText": "There is a problem",
        "errorList": errorList
      })
    }}
  {% endif %}

{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST" id="pageFormId" action="{{url}}" novalidate="novalidate">  
        {{ crumbToken(crumb)}}

        {% if type ==='single-answer' %}
          {{ govukRadios(items) }}
        {%endif%}

        {%if type ==='multi-answer' %}
          {{ govukCheckboxes(items) }}
        {%endif%}

        {%if type ==='input' or type ==='email' or type ==='tel' %}
          {{ govukInput(items) }}
        {%endif%}

        {%if type ==='select' %}
          {{ govukSelect(items) }}
        {%endif%}

        {%if type === 'multi-input' %}
          <h1 class="govuk-heading-l">{{title}}</h1>
          {% if hint.text %}
          <span class="govuk-hint">{{ hint.text }}</span> <br><br>
          {% endif %}
          {% if hint.html %}
            <span class="govuk-hint">{{ hint.html | safe }}</span>
          {% endif %}
          {% for item in items %}

            {% if item.type ==='sub-heading' %}
              <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                  <h2 class="govuk-fieldset__heading">{{item.text}} </h2>
                </legend>
            {%endif%}

            {%if item.type ==='input' or item.type ==='email' or item.type ==='tel' %}
              {{ govukInput(item) }}
            {%endif%}

            {%if item.type ==='select' %}
              {{ govukSelect(item) }}
            {%endif%}

            {% if item.type ==='single-answer' %}
              {{ govukRadios(item) }}
            {%endif%}
            {% if item.type ==='textarea' %}
              {{ govukCharacterCount(item) }}
            {%endif%}

            {%if item.endFieldset === 'true' %}
              </fieldset>
            {%endif%}
          {% endfor %}
        {%endif%}

        {% if warning %} 
          <br/>
          {{ govukWarningText(warning) }}
        {% endif %}

        <div class="govuk-!-padding-top-1">
          {% set buttonText = 'Continue' %}
          {% set secButtonText = 'Back to score' %}

          {%if key === 'agricultural-sector-solar' %}
            {% set buttonText = 'Get your score' %}
            {% set diaplaySecondryBtn = false %}
          {% elif reachedCheckDetails %}
            {% set diaplaySecondryBtn = true %}
            {% set secButtonText = 'Back to details' %}
          {% endif %}
        </div>
          {{ conditionalButtons(diaplaySecondryBtn, buttonText, secButtonText) }}
  </div>
    </form>
    {%if sideBarText %}
      {{ multiSideBar(sideBarText) }}
    {%endif%}
  </div>
{% endblock %}