{% extends '.layout.njk' %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "./components/macro.njk" import crumbToken, sideBar, conditionalButtons %}

{% block pageTitle %}
  {{siteTitle}} - {{title}}
{% endblock %}

{% block beforeContent %}
 {# {% if backUrl and key !== 'project-impacts' or diaplaySecondryBtn === false %} #}
  {% if backUrl %}
    {{ govukBackLink({
      text: "Back",
      href: backUrl
    }) }}
  {% endif %}

  {% if errorList %}
    {{ govukErrorSummary ({
        "titleText": "There is a problem",
        "errorList": errorList
      })
    }}
  {% endif %}

{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds govuk-!-margin-top-2">
      <form method="POST" action="{{url}}" novalidate="novalidate">      
        {{ crumbToken(crumb)}}
      value of back url {{backUrl}}
        {% if type ==='single-answer' %}
          {{ govukRadios(items) }}
        {%endif%}

        {%if type ==='multi-answer' %}
          {{ govukCheckboxes(items) }}
        {%endif%}

        {%if type ==='input' %}
          {{ govukInput(items) }}
        {%endif%}

        {%if type ==='select' %}
          {{ govukSelect(items) }}
        {%endif%}

        {%if type === 'multi-input' %}
          <h1 class="govuk-heading-l">{{title}}</h1>
          {% for item in items %}

            {% if item.type ==='single-answer' %}
              {{ govukRadios(item) }}
            {%endif%}

            {%if item.type ==='multi-answer' %}
              {{ govukCheckboxes(item) }}
            {%endif%}

            {%if item.type ==='input' %}
              {{ govukInput(item) }}
            {%endif%}

            {%if item.type ==='select' %}
              {{ govukSelect(item) }}
            {%endif%}

          {% endfor %}
        {%endif%}


        <div class="govuk-!-padding-top-5">
          {%if key === 'slurry-to-be-treated' or key === 'robotics-technology' %}
            {% set buttonText = "Get your score" %}
            {% set diaplaySecondryBtn = false %}
          {% else %}
            {% set buttonText = "Continue" %}
          {% endif %}

        {{ conditionalButtons(diaplaySecondryBtn, buttonText) }}
        </div>
      </form>
    </div>
    {%if sideBarText %}
      {{ sideBar(sideBarText) }}
    {%endif%}
  </div>
{% endblock %}